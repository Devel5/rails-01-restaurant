<div class="navbar">
      <h1>Restaurants List</h1>
      <div class="navbar-links">
      <%= link_to "Restaurant List", restaurant_list_path %> 
      <%= link_to "New Restaurants", new_restaurant_path %>
    </div>
  </div>
  <div class="background">
<ol>
    <% @restaurants.each_with_index do |restaurant, index| %>
        <li>
            <%= restaurant.title %> - <%= restaurant.food_type %> <%= link_to "show", restaurant_path(restaurant.id) %>
            <p>Reviews: <%= restaurant.reviews.count %></p>
            </li>
    <% end %>
</ol>
</div>
